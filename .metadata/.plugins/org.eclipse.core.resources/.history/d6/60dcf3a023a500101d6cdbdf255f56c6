package mientras;

import java.util.Scanner;

public class Mientras {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		int num, suma = 0, contador;
		System.out.println("Dame un numero: ");
		num = teclado.nextInt();
		contador = 1;
		
		while (num != 0 && contador != 3) { //si el usuario pone un cero termina de sumar, y si pone mas de 8 numeros tambien para
			suma = contador + num; //acumulador, acumula en sum lo que de num y lo suma
			System.out.println("Dame un numero: ");
			num = teclado.nextInt();
			contador = contador + 1; //contador++
		}
		System.out.println("La suma es: " + suma);
		
	}

}
