

package estructuraRepetitiva;

import java.util.Scanner;

public class Multiplo3 {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		int inicio, fin, contador;
		
		System.out.print("Dame un numero");
		int num1;
		num1 = teclado.nextInt();
		
		System.out.print("Dame un numero");
		int num2;
		num2 = teclado.nextInt();
		
		if (inicio <= fin) { //secuencia creciente
			System.out.println("Secuencia creciente desde " + inicio + " hasta " + fin );
			contador = inicio;
			
		do {
			System.out.print(" " + contador);
			contador = contador  + 1;
		} while (contador <= fin);
		
	} else {   //secuencia decreciente
			System.out.println("Secuencia decreciente desde " + inicio + " hasta " + fin );
			contador = inicio;
			
		do { 
			System.out.print(" " + contador);
			contador = contador  - 1;
		} while (contador >= fin);
		
	}
		
	}

}
